<Window x:Class="BankApp.BankWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankApp"
        mc:Ignorable="d"
        Title="Bank Account Simulator" Height="500" Width="800">
    <Grid>
        <TextBlock Text="Welcome to Your Bank Account" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>

        <TextBlock Text="Amount:" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,50,0,0"/>
        <TextBox Name="txtAmount" Width="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,50,0,0"/>

        <TextBlock Text="Balance:" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,90,0,0"/>
        <TextBlock Name="txtBalance" Text="$0.00" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,90,0,0"/>

        <Button Name="btnDeposit" Content="Deposit" Width="120" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,140,0,0" Click="btnDeposit_Click"/>
        <Button Name="btnWithdraw" Content="Withdraw" Width="120" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="160,140,0,0" Click="btnWithdraw_Click"/>
        <Button Name="btnLogout" Content="Logout" Width="120" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="300,140,0,0" Click="btnLogout_Click"/>

        <TextBlock Text="Transaction History:" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,190,0,0"/>
        <ListBox Name="lstTransactions" Width="400" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,220,0,0"/>
    </Grid>
</Window> 