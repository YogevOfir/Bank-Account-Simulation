<Window x:Class="BankApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankApp"
        mc:Ignorable="d"
        Title="Bank Login" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Bank Account Login" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <TextBlock Text="Username:" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,70,0,0"/>
        <TextBox Name="txtUsername" Width="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,70,0,0"/>

        <TextBlock Text="Password:" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,110,0,0"/>
        <PasswordBox Name="txtPassword" Width="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,110,0,0"/>

        <Button Name="btnLogin" Content="Login" Width="120" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,160,0,0" Click="btnLogin_Click"/>
        <Button Name="btnCreateAccount" Content="Create Account" Width="120" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,200,0,0" Click="btnCreateAccount_Click"/>

        <TextBlock Name="txtMessage" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,240,0,0" TextWrapping="Wrap" Width="350"/>
    </Grid>
</Window> 